{
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "ncstat": "node ./packages/ncstat-cli/bin/ncstat.js",
    "build-clean": "rimraf ./packages/*/build ./packages/*/build-es5 ./packages/*/tsconfig.tsbuildinfo",
    "prebuild": "yarn build:ts",
    "build": "yarn node ./scripts/build.js",
    "build:ts": "yarn node ./scripts/buildTs.js",
    "build:webui": "cd ./packages/ncstat-webui && yarn build",
    "clean-all": "rimraf ./node_modules && rimraf ./packages/*/node_modules && yarn clean-e2e && yarn build-clean",
    "clean-e2e": "yarn node ./scripts/cleanE2e.js",
    "jest-coverage": "yarn jest --coverage",
    "lint": "eslint ./packages/**/src/*.ts --cache",
    "lint:prettier": "yarn --silent lint:prettier:ci --fix",
    "publish": "yarn build-clean && yarn build && lerna publish --silent",
    "test": "yarn lint && yarn jest",
    "test:pkg": "yarn jest --testPathPattern",
    "watch": "yarn build && node ./scripts/watch.js",
    "watch:ts": "yarn build:ts --watch",
    "nuke": "find . -name 'node_modules' -type d -prune -print -exec rm -rf '{}' \\;"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.3",
    "@babel/core": "^7.8.3",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-decorators": "^7.8.3",
    "@babel/plugin-proposal-optional-chaining": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@babel/preset-typescript": "^7.8.3",
    "@babel/types": "^7.8.3",
    "@types/jest": "^25.1.1",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/parser": "^2.20.0",
    "@vue/cli-plugin-eslint": "^4.5.8",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^26",
    "chalk": "^3.0.0",
    "eslint": "^7.12.0",
    "eslint-config-node": "^4.0.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.1.1",
    "eslint-plugin-jest-formatting": "^1.2.0",
    "eslint-plugin-lodash-fp": "^2.2.0-a1",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-simple-import-sort": "^4.0.0",
    "eslint-plugin-vue": "^6.1.2",
    "execa": "^4.0.0",
    "glob": "^7.1.6",
    "husky": "^4.2.1",
    "jest": "^26.6.3",
    "lerna": "^3.20.2",
    "lint-staged": ">=10",
    "make-dir": "^3.0.2",
    "micromatch": "^4.0.2",
    "oao": "^1.8.0",
    "prettier": "^1.19.1",
    "string-length": "^3.1.0",
    "ts-jest": "^26.4.4",
    "typescript": "^3.7.5",
    "ultra-runner": "^2.3.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "*.ts": "eslint --cache --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
