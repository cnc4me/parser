{
  "name": "ncstat",
  "version": "1.0.1",
  "description": "Read NC programs for stats",
  "bin": "./bin/ncstat",
  "main":"./dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/harris-bruno/ncstat.git"
  },
  "author": "Kevin Hill",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://gitlab.com/harris-bruno/ncstat/issues"
  },
  "homepage": "https://gitlab.com/harris-bruno/ncstat#readme",
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register/transpile-only"
    ]
  },
  "scripts": {
    "test": "ava",
    "lint": "tslint 'src/**/*.ts'",
    "lint:fix": "tslint --fix 'src/**/*.ts'",
    "docs": "typedoc --out docs ./src",
    "build": "tsc",
    "watch": "tsc --watch",
    "stat": "node --inspect -r ts-node/register ./bin/ncstat.ts",
    "preversion": "npm test",
    "version": "npm run build && git add -A dist",
    "postversion": "git push && git push --tags && rm -rf build/temp"
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "commander": "^2.19.0",
    "debug": "^4.1.1",
    "javascript-state-machine": "^3.1.0",
    "lodash": "^4.17.11"
  },
  "devDependencies": {
    "@types/debug": "*",
    "@types/lodash": "^4.14.134",
    "ava": "^2.0.0",
    "awesome-typescript-loader": "^5.2.1",
    "js-yaml": "^3.13.1",
    "prettier": "1.18.2",
    "ts-loader": "^6.0.3",
    "ts-node": "^8.2.0",
    "ts-node-dev": "^1.0.0-pre.40",
    "tslint": "^5.17.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.5.1",
    "webpack": "^4.34.0",
    "webpack-cli": "^3.3.4"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "es6": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "rules": {
      "no-console": "off",
      "prettier/prettier": [
        "error"
      ]
    },
    "parserOptions": {
      "sourceType": "module"
    }
  }
}
