{
  "compilerOptions": {
    "rootDir": "./",
    "strict": true,
    "target": "esnext",
    "sourceMap": true,
    "lib": ["esnext"],
    "outDir": "dist",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["*.js", "bin/*.ts", "src/**/*.ts", "tests/**/*.test.ts"],
  "exclude": ["node_modules"]
}
