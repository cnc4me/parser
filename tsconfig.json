{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "sourceMap": true,
    "lib": ["esnext"],
    "outDir": "dist",
    "module": "commonjs",
    // "importHelpers": true,
    "esModuleInterop": true,
    // "noImplicitAny": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "*.js",
    "bin/*.ts",
    "demo/*.ts",
    "src/**/*.ts",
    "tests/**/*.test.ts",
    "**/src/**/*.ts",
    "**/test/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
