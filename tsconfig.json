{
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "sourceMap": true,
    "target": "esnext",
    "module": "commonjs",
    "importHelpers": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "T/*": [
        "tests/*"
      ]
    },
    "lib": [
      "esnext"
    ]
  },
  "include": [
    "*.ts",
    "*.js",
    "src/**/*.ts",
    "tests/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
