{
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "target": "es5",
    "sourceMap": true,
    "lib": ["esnext"],
    "outDir": "dist",
    "module": "commonjs",
    "importHelpers": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    // "noImplicitAny": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "*.ts",
    "*.js",
    "bin/*.ts",
    "src/*.ts",

    "**/src/**/*.ts",
    "**/test/**/*.ts",
    "demo/*.ts",
    "tests/*.ts",
    "src/*/*.ts"
  ],
  "exclude": ["node_modules"]
}
