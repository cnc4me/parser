{
  "compilerOptions": {
    // "baseUrl": ".",
    "strict": true,
    "target": "es5",
    "sourceMap": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "lib": ["esnext"]
  },
  "include": ["*.ts", "*.js", "src/*/*.ts", "tests/*/*.ts"],
  "exclude": ["node_modules"]
}
