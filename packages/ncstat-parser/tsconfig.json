{
  // "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "build",
    "target": "es2017",
    "module": "commonjs",
    "lib": [
      "dom",
      "es2017"
    ],
    "sourceMap": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    // "emitDeclarationOnly": true,
    // "isolatedModules": true,
    "strict": true,
    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    // "noImplicitAny": true,
    "noImplicitThis": true,
    "keyofStringsOnly": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "demo/*.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__"
  ]
}
